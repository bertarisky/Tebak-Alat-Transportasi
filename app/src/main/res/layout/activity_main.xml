<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49e2a7"
    tools:context="com.example.berta.tebakalattransportasi.MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_bus"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/bus"
                />


            <ImageView
                android:id="@+id/imageView_sepeda"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/sepeda"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_motor"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/motor"
                android:layout_weight="1"
                android:layout_margin="12dp"
                />

            <ImageView
                android:id="@+id/imageView_mobil"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/mobil"
                android:layout_weight="1"
                android:layout_margin="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_kapal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/kapal"
                android:layout_weight="1"
                android:layout_margin="12dp"
                />

            <ImageView
                android:id="@+id/imageView_pesawat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/pesawat"
                android:layout_weight="1"
                android:layout_margin="12dp"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_becak"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/becak"
                    android:layout_weight="1"
                    android:layout_margin="12dp"
                    />

                <ImageView
                    android:id="@+id/imageView_helikopter"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/helikopter"
                    android:layout_weight="1"
                    android:layout_margin="12dp"
                    />

        </LinearLayout>

    </LinearLayout>



</ScrollView>
